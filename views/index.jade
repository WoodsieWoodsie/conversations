html(lang="en")
  head
    meta(charset="UTF-8")
    title Conversations Home
    link(rel="stylesheet", href="vendor/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="css/style.css")  
    script(src='vendor/angular/angular.js')
  body(ng-app="conversations").container-fluid
    div(ng-controller="navCtrl")
      nav.navbar.navbar-default
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(ui-sref='home') Conversations.
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(ui-sref='home') Home. 
            li(ng-if="!isAuthenticated()")
              a(ui-sref='login') Log In.
            li(ng-if="isAuthenticated()")
              a(ng-click='logout()') Log Out.
      ui-view      

    script(src='vendor/jquery/dist/jquery.min.js')
    script(src='vendor/angular-ui-router/release/angular-ui-router.min.js')
    script(src='vendor/satellizer/satellizer.min.js')
    script(src="vendor/bootstrap/dist/js/bootstrap.min.js")
    script(src='js/module.js')
    script(src='js/controllers/login.js')
    script(src='js/controllers/home.js')
    script(src='js/controllers/nav.js')
    script(src='js/controllers/conversation.js')
  